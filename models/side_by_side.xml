<mujoco model="Humanoids Side by Side">
  <option timestep="0.005"/>
  <compiler autolimits="true"/>
  
  <visual>
    <map force="0.1" zfar="30"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global offwidth="2560" offheight="1440"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".3 .5 .7" rgb2="0 0 0" width="32" height="512"/>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
    <material name="red" rgba="0.8 0.3 0.3 1"/>
    <material name="green" rgba="0.3 0.8 0.3 1"/>
    <material name="blue" rgba="0.3 0.3 0.8 1"/>
  </asset>

  <worldbody>
    <!-- Ground -->
    <geom name="ground" type="plane" size="50 50 0.1" material="grid" condim="3"/>
    
    <light directional="true" diffuse="0.6 0.6 0.6" specular="0.3 0.3 0.3" pos="0 0 4" dir="0 0 -1"/>
    <light name="spotlight" pos="0 -4 3" dir="0 0.5 -1" diffuse=".8 .8 .8" directional="true"/>
    
    <!-- Bottom humanoid 1 (Red) -->
    <body name="left_bot" pos="0 -0.5 1">
      <freejoint name="left_bot_root"/>
      <body name="left_bot_torso" pos="0 0 0.282">
        <geom name="left_bot_torso" fromto="0 -.07 0 0 .07 0" size=".07" type="capsule" material="red"/>
        <geom name="left_bot_waist_upper" fromto="-.01 -.06 -.12 -.01 .06 -.12" size=".06" type="capsule" material="red"/>
        
        <!-- Head -->
        <body name="left_bot_head" pos="0 0 .19">
          <geom name="left_bot_head" type="sphere" size=".09" material="red"/>
        </body>
        
        <!-- Right Arm -->
        <body name="left_bot_upper_arm_right" pos="0 -.17 .06">
          <joint name="left_bot_shoulder1_right" type="hinge" axis="2 1 1" range="-85 60"/>
          <joint name="left_bot_shoulder2_right" type="hinge" axis="0 -1 1" range="-85 60"/>
          <geom name="left_bot_upper_arm_right" fromto="0 0 0 .16 -.16 -.16" size=".04" type="capsule" material="red"/>
          <body name="left_bot_lower_arm_right" pos=".18 -.18 -.18">
            <joint name="left_bot_elbow_right" type="hinge" axis="0 -1 1" range="-100 50"/>
            <geom name="left_bot_lower_arm_right" fromto=".01 .01 .01 .17 .17 .17" size=".031" type="capsule" material="red"/>
            <body name="left_bot_hand_right" pos=".18 .18 .18">
              <geom name="left_bot_hand_right" type="sphere" size=".04" material="red"/>
            </body>
          </body>
        </body>
        
        <!-- Left Arm -->
        <body name="left_bot_upper_arm_left" pos="0 .17 .06">
          <joint name="left_bot_shoulder1_left" type="hinge" axis="-2 1 -1" range="-85 60"/>
          <joint name="left_bot_shoulder2_left" type="hinge" axis="0 -1 -1" range="-85 60"/>
          <geom name="left_bot_upper_arm_left" fromto="0 0 0 .16 .16 -.16" size=".04" type="capsule" material="red"/>
          <body name="left_bot_lower_arm_left" pos=".18 .18 -.18">
            <joint name="left_bot_elbow_left" type="hinge" axis="0 -1 -1" range="-100 50"/>
            <geom name="left_bot_lower_arm_left" fromto=".01 -.01 .01 .17 -.17 .17" size=".031" type="capsule" material="red"/>
            <body name="left_bot_hand_left" pos=".18 -.18 .18">
              <geom name="left_bot_hand_left" type="sphere" size=".04" material="red"/>
            </body>
          </body>
        </body>
        
        <!-- Lower Body -->
        <body name="left_bot_waist_lower" pos="-.01 0 -.26">
          <geom name="left_bot_waist_lower" fromto="0 -.06 0 0 .06 0" size=".06" type="capsule" material="red"/>
          <joint name="left_bot_abdomen_z" pos="0 0 .065" axis="0 0 1" range="-45 45"/>
          <joint name="left_bot_abdomen_y" pos="0 0 .065" axis="0 1 0" range="-75 30"/>
          <body name="left_bot_pelvis" pos="0 0 -.165">
            <joint name="left_bot_abdomen_x" pos="0 0 .1" axis="1 0 0" range="-35 35"/>
            <geom name="left_bot_butt" fromto="-.02 -.07 0 -.02 .07 0" size=".09" type="capsule" material="red"/>
            
            <!-- Right Leg -->
            <body name="left_bot_thigh_right" pos="0 -.1 -.04">
              <joint name="left_bot_hip_x_right" type="hinge" axis="1 0 0" range="-30 10"/>
              <joint name="left_bot_hip_z_right" type="hinge" axis="0 0 1" range="-60 35"/>
              <joint name="left_bot_hip_y_right" type="hinge" axis="0 1 0" range="-150 20"/>
              <geom name="left_bot_thigh_right" fromto="0 0 0 0 .01 -.34" size=".06" type="capsule" material="red"/>
              <body name="left_bot_shin_right" pos="0 .01 -.4">
                <joint name="left_bot_knee_right" type="hinge" axis="0 -1 0" range="-160 2"/>
                <geom name="left_bot_shin_right" fromto="0 0 0 0 0 -.3" size=".049" type="capsule" material="red"/>
                <body name="left_bot_foot_right" pos="0 0 -.39">
                  <joint name="left_bot_ankle_y_right" type="hinge" pos="0 0 .08" axis="0 1 0" range="-50 50"/>
                  <joint name="left_bot_ankle_x_right" type="hinge" pos="0 0 .04" axis="1 0 .5" range="-50 50"/>
                  <geom name="left_bot_foot1_right" fromto="-.07 -.01 0 .14 -.03 0" size=".027" type="capsule" material="red"/>
                  <geom name="left_bot_foot2_right" fromto="-.07 .01 0 .14 .03 0" size=".027" type="capsule" material="red"/>
                </body>
              </body>
            </body>
            
            <!-- Left Leg -->
            <body name="left_bot_thigh_left" pos="0 .1 -.04">
              <joint name="left_bot_hip_x_left" type="hinge" axis="-1 0 0" range="-30 10"/>
              <joint name="left_bot_hip_z_left" type="hinge" axis="0 0 -1" range="-60 35"/>
              <joint name="left_bot_hip_y_left" type="hinge" axis="0 1 0" range="-150 20"/>
              <geom name="left_bot_thigh_left" fromto="0 0 0 0 -.01 -.34" size=".06" type="capsule" material="red"/>
              <body name="left_bot_shin_left" pos="0 -.01 -.4">
                <joint name="left_bot_knee_left" type="hinge" axis="0 -1 0" range="-160 2"/>
                <geom name="left_bot_shin_left" fromto="0 0 0 0 0 -.3" size=".049" type="capsule" material="red"/>
                <body name="left_bot_foot_left" pos="0 0 -.39">
                  <joint name="left_bot_ankle_y_left" type="hinge" pos="0 0 .08" axis="0 1 0" range="-50 50"/>
                  <joint name="left_bot_ankle_x_left" type="hinge" pos="0 0 .04" axis="-1 0 -.5" range="-50 50"/>
                  <geom name="left_bot_foot1_left" fromto="-.07 -.01 0 .14 -.03 0" size=".027" type="capsule" material="red"/>
                  <geom name="left_bot_foot2_left" fromto="-.07 .01 0 .14 .03 0" size=".027" type="capsule" material="red"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>

    <!-- Bottom humanoid 2 (Green) -->
    <body name="right_bot" pos="0 0.5 1">
      <freejoint name="right_bot_root"/>
      <body name="right_bot_torso" pos="0 0 0.282">
        <geom name="right_bot_torso" fromto="0 -.07 0 0 .07 0" size=".07" type="capsule" material="green"/>
        <geom name="right_bot_waist_upper" fromto="-.01 -.06 -.12 -.01 .06 -.12" size=".06" type="capsule" material="green"/>
        
        <!-- Head -->
        <body name="right_bot_head" pos="0 0 .19">
          <geom name="right_bot_head" type="sphere" size=".09" material="green"/>
        </body>
        
        <!-- Right Arm -->
        <body name="right_bot_upper_arm_right" pos="0 -.17 .06">
          <joint name="right_bot_shoulder1_right" type="hinge" axis="2 1 1" range="-85 60"/>
          <joint name="right_bot_shoulder2_right" type="hinge" axis="0 -1 1" range="-85 60"/>
          <geom name="right_bot_upper_arm_right" fromto="0 0 0 .16 -.16 -.16" size=".04" type="capsule" material="green"/>
          <body name="right_bot_lower_arm_right" pos=".18 -.18 -.18">
            <joint name="right_bot_elbow_right" type="hinge" axis="0 -1 1" range="-100 50"/>
            <geom name="right_bot_lower_arm_right" fromto=".01 .01 .01 .17 .17 .17" size=".031" type="capsule" material="green"/>
            <body name="right_bot_hand_right" pos=".18 .18 .18">
              <geom name="right_bot_hand_right" type="sphere" size=".04" material="green"/>
            </body>
          </body>
        </body>
        
        <!-- Left Arm -->
        <body name="right_bot_upper_arm_left" pos="0 .17 .06">
          <joint name="right_bot_shoulder1_left" type="hinge" axis="-2 1 -1" range="-85 60"/>
          <joint name="right_bot_shoulder2_left" type="hinge" axis="0 -1 -1" range="-85 60"/>
          <geom name="right_bot_upper_arm_left" fromto="0 0 0 .16 .16 -.16" size=".04" type="capsule" material="green"/>
          <body name="right_bot_lower_arm_left" pos=".18 .18 -.18">
            <joint name="right_bot_elbow_left" type="hinge" axis="0 -1 -1" range="-100 50"/>
            <geom name="right_bot_lower_arm_left" fromto=".01 -.01 .01 .17 -.17 .17" size=".031" type="capsule" material="green"/>
            <body name="right_bot_hand_left" pos=".18 -.18 .18">
              <geom name="right_bot_hand_left" type="sphere" size=".04" material="green"/>
            </body>
          </body>
        </body>
        
        <!-- Lower Body -->
        <body name="right_bot_waist_lower" pos="-.01 0 -.26">
          <geom name="right_bot_waist_lower" fromto="0 -.06 0 0 .06 0" size=".06" type="capsule" material="green"/>
          <joint name="right_bot_abdomen_z" pos="0 0 .065" axis="0 0 1" range="-45 45"/>
          <joint name="right_bot_abdomen_y" pos="0 0 .065" axis="0 1 0" range="-75 30"/>
          <body name="right_bot_pelvis" pos="0 0 -.165">
            <joint name="right_bot_abdomen_x" pos="0 0 .1" axis="1 0 0" range="-35 35"/>
            <geom name="right_bot_butt" fromto="-.02 -.07 0 -.02 .07 0" size=".09" type="capsule" material="green"/>
            
            <!-- Right Leg -->
            <body name="right_bot_thigh_right" pos="0 -.1 -.04">
              <joint name="right_bot_hip_x_right" type="hinge" axis="1 0 0" range="-30 10"/>
              <joint name="right_bot_hip_z_right" type="hinge" axis="0 0 1" range="-60 35"/>
              <joint name="right_bot_hip_y_right" type="hinge" axis="0 1 0" range="-150 20"/>
              <geom name="right_bot_thigh_right" fromto="0 0 0 0 .01 -.34" size=".06" type="capsule" material="green"/>
              <body name="right_bot_shin_right" pos="0 .01 -.4">
                <joint name="right_bot_knee_right" type="hinge" axis="0 -1 0" range="-160 2"/>
                <geom name="right_bot_shin_right" fromto="0 0 0 0 0 -.3" size=".049" type="capsule" material="green"/>
                <body name="right_bot_foot_right" pos="0 0 -.39">
                  <joint name="right_bot_ankle_y_right" type="hinge" pos="0 0 .08" axis="0 1 0" range="-50 50"/>
                  <joint name="right_bot_ankle_x_right" type="hinge" pos="0 0 .04" axis="1 0 .5" range="-50 50"/>
                  <geom name="right_bot_foot1_right" fromto="-.07 -.01 0 .14 -.03 0" size=".027" type="capsule" material="green"/>
                  <geom name="right_bot_foot2_right" fromto="-.07 .01 0 .14 .03 0" size=".027" type="capsule" material="green"/>
                </body>
              </body>
            </body>
            
            <!-- Left Leg -->
            <body name="right_bot_thigh_left" pos="0 .1 -.04">
              <joint name="right_bot_hip_x_left" type="hinge" axis="-1 0 0" range="-30 10"/>
              <joint name="right_bot_hip_z_left" type="hinge" axis="0 0 -1" range="-60 35"/>
              <joint name="right_bot_hip_y_left" type="hinge" axis="0 1 0" range="-150 20"/>
              <geom name="right_bot_thigh_left" fromto="0 0 0 0 -.01 -.34" size=".06" type="capsule" material="green"/>
              <body name="right_bot_shin_left" pos="0 -.01 -.4">
                <joint name="right_bot_knee_left" type="hinge" axis="0 -1 0" range="-160 2"/>
                <geom name="right_bot_shin_left" fromto="0 0 0 0 0 -.3" size=".049" type="capsule" material="green"/>
                <body name="right_bot_foot_left" pos="0 0 -.39">
                  <joint name="right_bot_ankle_y_left" type="hinge" pos="0 0 .08" axis="0 1 0" range="-50 50"/>
                  <joint name="right_bot_ankle_x_left" type="hinge" pos="0 0 .04" axis="-1 0 -.5" range="-50 50"/>
                  <geom name="right_bot_foot1_left" fromto="-.07 -.01 0 .14 -.03 0" size=".027" type="capsule" material="green"/>
                  <geom name="right_bot_foot2_left" fromto="-.07 .01 0 .14 .03 0" size=".027" type="capsule" material="green"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>  
  </worldbody>

  

  <equality>
    <!-- Weld top robot's feet to base robots' shoulders -->
    <weld name="weld_right_left" body1="right_bot_hand_right" body2="left_bot_hand_left"
      anchor="0 0 1.2" solref="0.01 1" solimp="0.9 0.95 0.001"/>

   
  </equality>

  <!-- COMPLETE ACTUATORS FOR ALL JOINTS -->
  <actuator>
    <!-- Base Humanoid 1 (Red) Actuators -->
    <position name="left_bot_abdomen_y" joint="left_bot_abdomen_y" kp="100"/>
    <position name="left_bot_abdomen_z" joint="left_bot_abdomen_z" kp="100"/>
    <position name="left_bot_abdomen_x" joint="left_bot_abdomen_x" kp="100"/>
    <position name="left_bot_hip_x_right" joint="left_bot_hip_x_right" kp="100"/>
    <position name="left_bot_hip_z_right" joint="left_bot_hip_z_right" kp="100"/>
    <position name="left_bot_hip_y_right" joint="left_bot_hip_y_right" kp="100"/>
    <position name="left_bot_knee_right" joint="left_bot_knee_right" kp="80"/>
    <position name="left_bot_ankle_x_right" joint="left_bot_ankle_x_right" kp="50"/>
    <position name="left_bot_ankle_y_right" joint="left_bot_ankle_y_right" kp="50"/>
    <position name="left_bot_hip_x_left" joint="left_bot_hip_x_left" kp="100"/>
    <position name="left_bot_hip_z_left" joint="left_bot_hip_z_left" kp="100"/>
    <position name="left_bot_hip_y_left" joint="left_bot_hip_y_left" kp="100"/>
    <position name="left_bot_knee_left" joint="left_bot_knee_left" kp="80"/>
    <position name="left_bot_ankle_x_left" joint="left_bot_ankle_x_left" kp="50"/>
    <position name="left_bot_ankle_y_left" joint="left_bot_ankle_y_left" kp="50"/>
    <position name="left_bot_shoulder1_right" joint="left_bot_shoulder1_right" kp="50"/>
    <position name="left_bot_shoulder2_right" joint="left_bot_shoulder2_right" kp="50"/>
    <position name="left_bot_elbow_right" joint="left_bot_elbow_right" kp="50"/>
    <position name="left_bot_shoulder1_left" joint="left_bot_shoulder1_left" kp="50"/>
    <position name="left_bot_shoulder2_left" joint="left_bot_shoulder2_left" kp="50"/>
    <position name="left_bot_elbow_left" joint="left_bot_elbow_left" kp="50"/>

    <!-- Base Humanoid 2 (Green) Actuators -->
    <position name="right_bot_abdomen_y" joint="right_bot_abdomen_y" kp="100"/>
    <position name="right_bot_abdomen_z" joint="right_bot_abdomen_z" kp="100"/>
    <position name="right_bot_abdomen_x" joint="right_bot_abdomen_x" kp="100"/>
    <position name="right_bot_hip_x_right" joint="right_bot_hip_x_right" kp="100"/>
    <position name="right_bot_hip_z_right" joint="right_bot_hip_z_right" kp="100"/>
    <position name="right_bot_hip_y_right" joint="right_bot_hip_y_right" kp="100"/>
    <position name="right_bot_knee_right" joint="right_bot_knee_right" kp="80"/>
    <position name="right_bot_ankle_x_right" joint="right_bot_ankle_x_right" kp="50"/>
    <position name="right_bot_ankle_y_right" joint="right_bot_ankle_y_right" kp="50"/>
    <position name="right_bot_hip_x_left" joint="right_bot_hip_x_left" kp="100"/>
    <position name="right_bot_hip_z_left" joint="right_bot_hip_z_left" kp="100"/>
    <position name="right_bot_hip_y_left" joint="right_bot_hip_y_left" kp="100"/>
    <position name="right_bot_knee_left" joint="right_bot_knee_left" kp="80"/>
    <position name="right_bot_ankle_x_left" joint="right_bot_ankle_x_left" kp="50"/>
    <position name="right_bot_ankle_y_left" joint="right_bot_ankle_y_left" kp="50"/>
    <position name="right_bot_shoulder1_right" joint="right_bot_shoulder1_right" kp="50"/>
    <position name="right_bot_shoulder2_right" joint="right_bot_shoulder2_right" kp="50"/>
    <position name="right_bot_elbow_right" joint="right_bot_elbow_right" kp="50"/>
    <position name="right_bot_shoulder1_left" joint="right_bot_shoulder1_left" kp="50"/>
    <position name="right_bot_shoulder2_left" joint="right_bot_shoulder2_left" kp="50"/>

  </actuator>

  

</mujoco>